<div>
  <h1 class="font-bold text-4xl">My Calendar</h1>
  <%= render partial: 'shared/errors' %>
  <%= link_to "Back to #{@lodging.title}", users_lodging_path(@lodging) %>
  <%= link_to "View Full Calendar", users_lodging_calendars_path(@lodging) %>

  <%= button_to "create date", users_lodging_calendars_path, params: { calendar: { date: 3.days.from_now, status: "away", lodging_id: params[:lodging_id] } } %>
  
  <% @calendar.each do |date| %>
    <pre><%= JSON.pretty_generate(date.as_json) %></pre>
    <%= button_to "update date",
    users_lodging_calendars_path(id: date.id), 
    method: :patch, 
    params: { 
      calendar: { status: "staying" }
    }
  %>
    <%= button_to "Delete date", users_lodging_calendars_path(lodging_id: params[:lodging_id], id: date.id), method: :delete %>
  <% end %>
</div>
