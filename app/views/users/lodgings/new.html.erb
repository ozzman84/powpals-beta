<h1>Create Lodging</h1>

<%= render partial: 'shared/errors' %>

<form action="/users/lodgings" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label for="title">Title</label>
    <input type="text" name="lodging[title]" id="title" value="<%= @lodging.title %>">

    <label for="description">Description</label>
    <textarea id="description" name="lodging[description]"><%= @lodging.description %></textarea>

    <label for="max_guests">What is the maximum capacity?</label>
    <input type="number" name="lodging[max_guests]" value="<%= @lodging.max_guests %>" min="1" max="100" step="1">
    
    <input type="submit" value="Create Lodging">
</form>
