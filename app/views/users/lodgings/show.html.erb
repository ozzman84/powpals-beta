<div>
  <h1 class="font-bold text-4xl"><%= @lodging.title %></h1>
</div>

<p>
  <%= @lodging.description %>
</p>

<% if @lodging.photos.exists? %>
  <%= image_tag @lodging.photos.first.photo.variant(resize_to_limit: [100, 100]) %>
<% end %>

<ul>
  <% @lodging.rooms.each do |room| %>
    <li><% room.room_type %> beds: <%= room.beds.count %></li>
  <% end %>
</ul>

<pre><%= JSON.pretty_generate(@lodging.as_json) %></pre>
