<head>
    <title>Rooms and Beds</title>
    <%= render partial: 'form', locals: { lodging: @lodging } %>
    <style>
        .roomsContainer {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
        }
        .room {
            display: flex;
            flex-direction: column;
            border: 1px solid black;
            padding: 10px;
            margin: 10px;
        }
        .bed {
            border: 1px solid black;
            margin: 5px;
            width: 100px;
            height: 50px;
        }
    </style>
</head>
<body>
    <h1>Rooms</h1>
    <div class="roomsContainer">
      <% @rooms.each do |room| %>
        <div class="room" style="width: 200px;">
            <h2><%= room.name %></h2>
            <p>Type: <%= room.room_type %></p>
            <% room.beds.each do |bed| %>
              <div class="bed"><%= "#{bed.size} #{bed.style}" %></div>
            <% end %>
        </div>
      <% end %>
    </div>

    <script>
        // Add your JavaScript here
    </script>
</body>






